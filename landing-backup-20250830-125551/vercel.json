{
  "version": 2,
  "rewrites": [
    { "source": "/",          "destination": "/en/index.html" },
    { "source": "/en",        "destination": "/en/index.html" },

    { "source": "/ua",        "destination": "/ua/index.html" },
    { "source": "/uk",        "destination": "/ua/index.html" },

    { "source": "/auction",   "destination": "/index.html" },
    { "source": "/founders",  "destination": "/index.html" },

    { "source": "/product",   "destination": "/en/index.html" },
    { "source": "/pricing",   "destination": "/en/index.html" },
    { "source": "/faq",       "destination": "/en/index.html" },
    { "source": "/security",  "destination": "/en/index.html" },
    { "source": "/support",   "destination": "/support.html" },
    { "source": "/join",      "destination": "/join.html" },

    { "source": "/blog",      "destination": "/en/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "X-Content-Type-Options",    "value": "nosniff" },
        { "key": "Referrer-Policy",           "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy",        "value": "camera=(), microphone=(), geolocation=()" }
      ]
    },
    {
      "source": "/admin(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
      ]
    },
    {
      "source": "/pay(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
      ]
    }
  ]
}
